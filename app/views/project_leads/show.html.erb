<div class = 'my-2 mx-3'>
<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @project_lead.user_id %>
</p>

<p>
  <strong>Client:</strong>
  <%= @project_lead.client_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @project_lead.name %>
</p>

<p>
  <strong>Platform:</strong>
  <%= @project_lead.platform %>
</p>

<p>
  <strong>Sale Status:</strong>
  <%= @project_lead.is_sale %>
</p>

<p>
  <strong>Created Date</strong>
  <td><%= @project_lead.created_at.year.to_s + '-' + @project_lead.created_at.month.to_s + '-' + @project_lead.created_at.day.to_s %></td>
</p>

<p>
  <strong>Updatation Date</strong>
  <%= @project_lead.updated_at %>
</p>

<%= link_to 'Edit', edit_project_lead_path(@project_lead) %> |
<%= link_to 'Back', project_leads_path %>
<br>
<%= render partial: 'comments/comments', locals: {commentable: @project_lead}%>
<%= render partial: 'comments/form', locals: {commentable: @project_lead}%>
</div>
