<p id="notice"><%= notice %></p>

<h1>Current Leads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Sale Status</th>
      <th>Assignee</th>
      <th>Client</th>
      <th>Creation</th>
      <th>Updation</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_leads.each do |project_lead| %>
      <tr>

        <td><%= project_lead.name %></td>
        <td><%= project_lead.platform %></td>
        <td><%= project_lead.is_sale %></td>
        <td><%= project_lead.user.name %></td>
        <td><%= project_lead.client.name %></td>
        <td><%= project_lead.created_at %></td>
        <td><%= project_lead.updated_at %></td>
        <td><%= link_to 'Show', project_lead %></td>
        <td><%= link_to 'Edit', edit_project_lead_path(project_lead) %></td>
        <td><%= link_to 'Destroy', project_lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Comment', new_comment_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>
