<%= stylesheet_link_tag "application" %>
<h3 class="bg-secondary text-white text-center py-2">Current Projects</h3>
<table class="table table-striped my-5">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Assignee</th>
      <th>Client</th>
      <th>Client Address</th>
      <th>Client Email</th>
      <th>Client Contact</th>
      <th colspan="4"></th>
    </tr>

  </thead>

  <tbody>
    <% @project_leads.each do |project_lead| %>
      <tr>
        <td><%= project_lead.name %></td>
        <td><%= project_lead.platform %></td>
        <td><%= project_lead.user.name %></td>
        <td><%= project_lead.client.name %></td>
        <td><%= project_lead.client.address %></td>
        <td><%= project_lead.client.email %></td>
        <td><%= project_lead.client.contact%></td>
        <td></td>

      </tr>
    <% end %>
  </tbody>
</table>
