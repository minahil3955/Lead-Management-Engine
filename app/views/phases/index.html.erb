<p id="notice"><%= notice %></p>

<h1>Phases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Due date</th>
      <th>Status</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Project lead</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phases.each do |phase| %>
      <tr>
        <td><%= phase.name %></td>
        <td><%= phase.due_date %></td>
        <td><%= phase.status %></td>
        <td><%= phase.created_at %></td>
        <td><%= phase.updated_at %></td>
        <td><%= phase.project_lead_id %></td>
        <td><%= link_to 'Show', phase %></td>
        <td><%= link_to 'Edit', edit_phase_path(phase) %></td>
        <td><%= link_to 'Destroy', phase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

