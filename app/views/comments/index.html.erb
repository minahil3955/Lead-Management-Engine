<%= stylesheet_link_tag "application" %>

<h3 class="bg-secondary text-white text-center py-2">Current Comments</h3>

<table class="table table-striped my-5">
  <thead class="thead-dark">
    <tr>
      <th>Commentor</th>
      <th>Creation Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.commentable.name%></td>
        <td><%=  comment.created_at.to_date %></td>
        <td><%= link_to 'View Comment', comment %></td>
        <td><%= link_to 'Delete Comment', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

